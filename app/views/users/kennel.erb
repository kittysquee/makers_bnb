<div class='container'>
  <div class="row">
    <div class="col-sm-2"></div>

    <div class="col-sm-8">
      <div class="page-header text-center">
        <h1>My Pads</h1>
      </div>

      <% current_user.pads.each do |pad| %>
        <div class='panel panel-default'>
          <div class='panel-heading'>
            <h3 class='panel-title'><%= pad.name.capitalize %></h3>
          </div>

          <div class='panel-body'>
            <%= pad.location.capitalize %><br />
            Â£<%= pad.price %> per/night<br />
            <span class="label label-danger">Booked</span><br />
            <% Booking.all.each do |booking| %>
              <% if booking.pad_id == pad.id %>
                <%= booking.date %>,
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
