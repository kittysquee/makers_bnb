
<body>
<div class='container'>
  <div class='row'>
    <div class='page-header text-center'>
      <h1>Book a Pad</h1>
    </div>
  </div>






  <% @pads.each do |pad| %>

  <div class='panel panel-default'>
    <div class='panel-heading'>
      <h3 class='panel-title'><%= pad.name %></h3>
    </div>
    <div class='panel-body'>
    <%= pad.available ? "is available for good boys" : "is full of poochies at the moment" %>
      <%= pad.location %>
      <%= pad.price %>
      <form action='/pads/<%= pad.id %>' method='post'>
        <input class='btn btn-success pull-right' type='submit' value='More Info'>
      </form>
    </div>
  </div>



  <% end %>

  </div>




</body>
