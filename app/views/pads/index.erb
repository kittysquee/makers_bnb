<style>
body {
  background-color: tomato;
  text-align: center;
  margin-top: 8%;
}
</style>
<body>

<h1>Book a pad</h1>

<form action='/users/kennel' method='get'>
  <button type='submit' value='My Kennel'>
    My Kennel
  </button>
</form>

<form action='/pads/new' method='get'>
  <button type='submit' value='List a Pad'>
    List a pad
  </button>
</form>

<ul id="pads">
  <% @pads.each do |pad| %>
    <li>
      <%= pad.name %>
      <%= pad.location %>
      <%= pad.price %>
    </li>
  <% end %>
</ul>

<% if current_user %>
  <form action='sessions' method='post'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Sign out'>
  </form>
<% end %>

</body>
