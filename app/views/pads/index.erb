<div class='container'>
  <div class='row'>
    <div class="col-sm-2"></div>

    <div class="col-sm-8">
      <div class='page-header text-center'>
        <h1>Book a Pad</h1>
      </div>

      <% @pads.each do |pad| %>
        <div class='panel panel-default'>
          <div class='panel-heading'>
            <% if pad.available %>
              <h3 class='panel-title'><%= pad.name.capitalize %> </h3>
              <span class="label label-success">Available</span>
            <% else %>
              <h3 class='panel-title'><%= pad.name.capitalize %> </h3>
              <span class="label label-danger">Fully Booked</span>
            <% end %>
          </div>

          <div class='panel-body'>
            <%= pad.location.capitalize %><br />
            Â£<%= pad.price %> per/night
            <form action='/pads/<%= pad.id %>' method='post'>
              <input class='btn btn-success pull-right' type='submit' value='More Info'>
            </form>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
