<style>
body {
  background-color: tomato;
  text-align: center;
  margin-top: 8%;
}
</style>
<body>

<h1>Book a pad</h1>

<ul id="pads">
  <% @pads.each do |pad| %>
    <li>
      <%= pad.name %>
      <%= pad.location %>
      <%= pad.price %>
      <form action='/pads/<%= pad.id %>' method='post'>
        <input type='submit' value='Book Pad'>
      </form>
    </li>
  <% end %>
</ul>



<% if current_user %>
  <form action='sessions' method='post'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Sign out'>
  </form>
<% end %>

</body>
