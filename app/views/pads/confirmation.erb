
<div class='container'>
  <div class='row'>
    <div class="col-sm-2"></div>

    <div class="col-sm-8">
      <div class='page-header text-center'>
        <h1>You successfully booked: </h1>
        <h1><%= @confirmed_pad.name %></h1>
        <h2>on <%= @confirmed_booking.date %></h2>
      </div>
      <div class='well'>
        The booking has been added to the "My Bookings" page
      </div>
    </div>
    <div class="col-sm-2"></div>
  </div>
</div>
<% if @confirmed_pad.user == current_user %>
  <p>Error, you cannot book your own pad<p>
<% elsif @confirmed_booking.date == "" %>
  <p>Error, please specify a date</p>
<% else %>
  <h1>You successfully booked the following pad:</h1><%= @confirmed_pad.name %>
  <h2>Your booking is confirmed for the <%= @confirmed_booking.date %>
<%end%>

